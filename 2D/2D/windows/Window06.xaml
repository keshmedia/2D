<Window x:Class="_2D.windows.Window06"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2D.windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Window06" Height="720" Width="1280">

    <Grid Background="Black" Margin="10">

 <TextBlock x:Name="textBox1" 
FontSize="150" Padding="60" HorizontalAlignment="Center"
TextWrapping="Wrap" Foreground="Green"  
         
     
 Text="{Binding ElementName=slider1, Path=Value}"   />
   
 <Slider x:Name="slider1" Margin="10" />

 <Label Content="Binding" FontSize="44"
HorizontalAlignment="Center" VerticalAlignment="Bottom"
Foreground="Orange" Margin="0 0 0 50"/>
    </Grid>

</Window>
